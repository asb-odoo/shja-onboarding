<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_invoice_document_second_discount_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//table/thead/tr/th[@name='th_taxes']" position="before">
            <t t-set="display_second_discount" t-value="any(l.second_discount for l in o.invoice_line_ids)"/>
            <th name="th_second_discount" t-if="display_second_discount" class="text-right">
                <span>2nd Disc.%</span>
            </th>
        </xpath>

        <xpath expr="//table/tbody/t[3]/tr/t/td[@t-if='display_discount']" position="after">
            <td t-if="display_second_discount" class="text-right">
                <span t-field="line.second_discount"/>
            </td>
        </xpath>
    </template>
</odoo>